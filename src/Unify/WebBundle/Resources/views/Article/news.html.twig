{% extends "UnifyWebBundle::Layout.html.twig" %}
{% block main %}
<div class="container">
   {% render "UnifyWebBundle:Widget:latestNews" with {'num': 3} %}
   <!-- content -->
   <div class="section" id="content">
      <h2>{{ news.title }}</h2>
      <div class="img-box">
          {% if news.img %}
          <img src="{{ news.getImgPath() }}" class="imgb" alt="{{ news.title }}" />
          {% endif %}
          {{ news.content }}
      </div>
   </div>
   <div class="clear"></div>
</div>
{% endblock %}